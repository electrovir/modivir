{
    "name": "modivir",
    "version": "0.0.0",
    "private": true,
    "homepage": "https://github.com/electrovir/modivir#readme",
    "bugs": {
        "url": "https://github.com/electrovir/modivir/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/electrovir/modivir.git"
    },
    "license": "MIT",
    "author": {
        "name": "electrovir",
        "url": "https://github.com/electrovir"
    },
    "main": "packages/main/dist/index.cjs",
    "scripts": {
        "build": "ts-node -P ./packages/scripts/tsconfig.json -r tsconfig-paths/register ./packages/scripts/build.ts",
        "precompile": "cross-env MODE=production npm run build",
        "compile": "killall modivir; rm -rf dist && electron-builder build --config .electron-builder.config.js --dir --config.asar=false && open -n ./dist/mac-arm64/modivir.app",
        "dev": "npm run watch",
        "format": "virmator format write",
        "frontend": "npm install && cd frontend && vite --force --config ./vite/config.ts",
        "spellcheck": "virmator spellcheck",
        "test": "jest",
        "test:full": "npm test && npm run spellcheck && virmator format check",
        "typecheck": "npm run typecheck-main && npm run typecheck-preload && npm run typecheck-renderer",
        "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
        "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
        "pretypecheck-renderer": "dts-cb -i packages/preload/src/**/*.ts -o packages/preload/exposedInMainWorld.d.ts",
        "typecheck-renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
        "watch": "ts-node -P ./packages/scripts/tsconfig.json -r tsconfig-paths/register ./packages/scripts/watch.ts"
    },
    "dependencies": {
        "electron-updater": "4.6.5"
    },
    "devDependencies": {
        "@babel/preset-typescript": "^7.16.7",
        "@types/electron-devtools-installer": "2.2.1",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.6",
        "@vitejs/plugin-vue": "2.0.1",
        "cross-env": "7.0.3",
        "dts-for-context-bridge": "0.7.1",
        "electron": "16.0.5",
        "electron-builder": "22.14.5",
        "electron-devtools-installer": "3.2.0",
        "jest": "^27.4.5",
        "playwright": "1.17.1",
        "ts-jest": "^27.1.2",
        "tsconfig-paths": "^3.12.0",
        "typescript": "4.5.4",
        "virmator": "^1.3.7",
        "vite": "^2.7.10"
    },
    "engines": {
        "node": ">=v16.13",
        "npm": ">=8.1"
    }
}
